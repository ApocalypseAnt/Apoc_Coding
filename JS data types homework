
// Homework Week 3

let weather = {
  paris: {
    temp: 19.7,
    humidity: 80,
  },
  tokyo: {
    temp: 17.3,
    humidity: 50,
  },
  lisbon: {
    temp: 30.2,
    humidity: 20,
  },
  "san francisco": {
    temp: 20.9,
    humidity: 100,
  },
  moscow: {
    temp: -5,
    humidity: 20,
  },
};

// write your code here

let cityWeather = prompt("Enter a city");
cityWeather = cityWeather.trim();
if (cityWeather === "paris") {
  alert(
    `It is currently ${Math.round(
      weather.paris.temp
    )} °C in ${cityWeather} with a humidity of ${weather.paris.humidity}%`
  );
} else {
  if (cityWeather === "tokyo") {
    alert(
      `It is currently ${Math.round(
        weather.tokyo.temp
      )} °C in ${cityWeather} with a humidity of ${weather.tokyo.humidity}%`
    );
  } else {
    if (cityWeather === "lisbon") {
      alert(
        `It is currently ${Math.round(
          weather.lisbon.temp
        )} °C in ${cityWeather} with a humidity of ${weather.lisbon.humidity}%`
      );
    } else {
      if (cityWeather === "san francisco") {
        alert(
          `It is currently ${Math.round(
            weather["san francisco"].temp
          )} °C in ${cityWeather} with a humidity of ${
            weather["san francisco"].humidity
          }%`
        );
      } else {
        if (cityWeather === "moscow") {
          alert(
            `It is currently ${Math.round(
              weather.moscow.temp
            )} °C in ${cityWeather} with a humidity of ${
              weather.moscow.humidity
            }%`
          );
        } else {
          alert(
            "Sorry, we don't know the weather for this city, try going to https://www.google.com/search?q=weather+" +
              cityWeather
          );
        }
      }
    }
  }
}
